{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
      "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  globals: {
    'Meteor': true,
    'document': true,
    'ServiceConfiguration': true
  },
  rules: {
    "react/prop-types": 0
  },
  env: {
    "browser": true,
    "node": true,
    "es6": true
  }
}
